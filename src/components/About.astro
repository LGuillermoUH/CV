---
import { getCollection } from 'astro:content';
const { lang } = Astro.params;
const aboutEntries = await getCollection('About', ({ data }) => data.lang === lang);
const about = aboutEntries[0]; 

---
<div class="my-5 mx-8">
    
    <header class="border-b pb-2 mb-4 border-border">
        <h2 class="text-xl font-bold">{about.data.title}</h2>
    </header>    
    <div class="grow prose-lg p-4">
        <p class=" text-primary-text prose-lg">
            {about.body}
        </p>
    </div>  
</div>