---
import Chip from "./Chip.astro";
interface Props {
    experience: {
    id: number;
    title: string;
    duration: string;
    description: string;
    tags: string[];
  }
}
const { experience } = Astro.props;

---

<div class="p-4 mb-4">
    <h3 class="text-2xl sm:text-3xl font-bold text-text-title mb-1">{experience.title}</h3>
    <h4 class="text-sm text-text-subtitle mb-1">{experience.duration}</h4>
    {
        experience.tags.map((item, index) => {
             return <Chip title = {item}/>
        })
    }
    <p class="text-sm sm:text-base leading-relaxed text-text-body">{experience.description}</p>
</div>