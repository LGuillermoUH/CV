---
import ExperienceImage from '../components/ExperienceImage.astro';
import ExperienceContent from '../components/ExperienceContent.astro';

const { company } = Astro.props;

---

<article class="flex p-4 rounded-lg">
    <div class="w-16">
        <ExperienceImage />
    </div>
      
  <section class="flex-1 space-y-2">
    {company.experience.map((experience, expIndex) => (
      <ExperienceContent experience={experience} key={`experience-${expIndex}`} />
    ))}
  </section>
</article>
