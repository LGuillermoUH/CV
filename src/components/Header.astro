---
import { getCollection } from 'astro:content';
const { lang } = Astro.params;
const personalData = await getCollection('Personal',({data}) => data.lang == lang);
console.log(personalData)
---

<header class="mx-8 text-center p-6 my-auto ">
    <h1 class="text-4xl font-bold">{personalData[0].data.name}</h1>
    <h3 class="text-2xl mt-2 text-text-subtitle">{personalData[0].data.career}</h3>
    <p class="text-lg mt-4 text-text-subtitle">
        {personalData[0].data.knowledge}
    </p>
    <p class="text-md mt-2 text-text-subtitle">
        {personalData[0].data.technologis}
    </p>
</header>
